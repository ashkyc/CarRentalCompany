@model RentalCarCompany.ViewModels.CustomerFormViewModel

@{
    ViewBag.Title = "CustomerForm";
}

<h2>CustomerForm</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors")

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.FirstName)
        @Html.TextBoxFor(m => m.Customer.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.LastName)
        @Html.TextBoxFor(m => m.Customer.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.LastName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Birthdate)
        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Birthdate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.DriverLicense)
        @Html.TextBoxFor(m => m.Customer.DriverLicense, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.DriverLicense)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTierId)
        @Html.DropDownListFor(m => m.Customer.MembershipTierId, new SelectList(Model.MembershipTiers, "Id", "Tier"), "Select MembershipTier", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.MembershipTierId)
    </div>

    @Html.HiddenFor(m => m.Customer.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}